@model Usuarios

<form asp-action="Upsert" method="post">
    <input asp-for="Cedula" hidden />

    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>Administration</p>
                        <h2 class="text-primary">@(Model.Cedula != 0 ? "Actualizar" : "Crear")  Usuario</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="Nombre" class="form-control form-control-user"
                                           placeholder="Nombre del usuario">
                                    <span asp-validation-for="Nombre" class="text-danger"></span>

                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="PrimerAppellido" class="form-control form-control-user"
                                           placeholder="Primer apellido del usuario">
                                    <span asp-validation-for="PrimerAppellido" class="text-danger"></span>

                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="SegundoApellido" class="form-control form-control-user"
                                           placeholder="Segundo Apellido del usuario">
                                    <span asp-validation-for="SegundoApellido" class="text-danger"></span>

                                </div>

                                <div class="col-sm-6">
                                    <input asp-for="Correo" class="form-control form-control-user"
                                           placeholder="Correo del usuario">
                                    <span asp-validation-for="Correo" class="text-danger"></span>

                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="DireccionExacta" class="form-control form-control-user"
                                           placeholder="Direccion Exacta">
                                    <span asp-validation-for="DireccionExacta" class="text-danger"></span>

                                </div>
                                <div class="col-sm-6">
                                    <input asp-for="Celular" class="form-control form-control-user"
                                           placeholder="Celular del usuario">
                                    <span asp-validation-for="Celular" class="text-danger"></span>

                                </div>
                            </div>

                        </div>
                        @if (Model.Cedula != 0)
                        {
                            <button asp-action="Upsert" asp-route-id="@Model.Cedula" class="btn btn-primary btn-user btn-block">Actualizar</button>
                        }
                        else
                        {
                            <button asp-action="Upsert" class="btn btn-primary btn-user btn-block">Crear</button>
                        }
                        <hr>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>