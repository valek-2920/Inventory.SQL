@model ActivosViewModel

<form asp-action="Upsert" method="post">
    <input asp-for="Activo.Codigo" hidden />

    <div class="breadcrumb-section breadcrumb-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-8 offset-lg-2 text-center">
                    <div class="breadcrumb-text">
                        <p>Administración</p>
                        <h2 class="text-primary">@(Model.Activo.Codigo != 0 ? "Actualizar" : "Crear")  Activo</h2>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container">
        <div class="card o-hidden border-0 shadow-lg my-5">
            <div class="card-body p-0">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="p-5">
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="Activo.Nombre" class="form-control form-control-user"
                                           placeholder="Nombre del activo">
                                    <span asp-validation-for="Activo.Nombre" class="text-danger"></span>

                                </div>
                                <div class="col-sm-6 mb-3 mb-sm-0">
                                    <input asp-for="Activo.Descripcion" class="form-control form-control-user"
                                           placeholder="Descripción del activo">
                                    <span asp-validation-for="Activo.Descripcion" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-sm-6">
                                <select asp-for="Activo.CategoriaId" asp-items="@Model.ListaCategorias" class="form-control">
                                    <option disabled selected>--Seleccionar Categoría--</option>
                                </select>
                                <span asp-validation-for="Activo.CategoriaId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    @if (Model.Activo.Codigo != 0)
                    {
                        <button asp-action="Upsert" asp-route-id="@Model.Activo.Codigo" class="btn btn-primary btn-user btn-block">Actualizar</button>
                    }
                    else
                    {
                        <button asp-action="Upsert" class="btn btn-primary btn-user btn-block">Crear</button>
                    }
                    <hr>
                </div>
            </div>
        </div>
    </div>
    </div>
</form>